{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],                   // ðŸ”‘ IMPORTANTE: permite usar process, __dirname, etc.
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],                    // Asegura que solo compile el cÃ³digo fuente
  "exclude": ["node_modules", "dist"]    // Evita errores en mÃ³dulos externos
}
